<h1>Plan a New Aquarium</h1>

<div class="big">
  <%= form_for @aquarium do |f| %>

    <div>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %> <!-- text_area is different than text_field -->
    </div>

    <!-- List of Fish -->
    <p><strong>Select Your Fish</strong></p>
    <p><%= f.collection_check_boxes :fish_ids, Fish.all, :id, :name, :style => "display: block;" %></p>
    <br>
    <%= f.submit "Save", class: "btn btn-success" %>

  <% end %> <!-- closing out the form_for method -->
</div>
