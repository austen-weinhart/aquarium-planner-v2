<h1 class="showheader">Plan a New Aquarium</h1>

<div class="big col-md-6">
  <%= form_for @aquarium do |f| %>

    <div>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %> <!-- text_area is different than text_field -->
    </div>

    <!-- List of Fish -->
    <p><strong>Select Your Fish</strong></p>
    <%= f.collection_check_boxes :fish_ids, Fish.all, :id, :name  do |b| %>
      <%= b.label(class: "label_box") { b.check_box(class: "check_box")  + " " + b.text } %>
      <!-- Need to fix More Info link -->
    <% end%>
    <br>
    <%= f.submit "Save", class: "btn btn-success" %>

  <% end %> <!-- closing out the form_for method -->
</div>
