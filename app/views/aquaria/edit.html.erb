<h1>Edit this aquarium!</h1>

<%= form_for @aquarium do |f| %> 
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>  
  </div>
  <br>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div> 
  <br>
  <p><strong>Select Your Fish</strong></p>
  <%= f.collection_check_boxes :fish_ids, Fish.all, :id, :name %>
  <%= f.submit "Submit Changes" %>
  <br>
<% end %>
<br>
<%= link_to "Back", aquarium_path %>