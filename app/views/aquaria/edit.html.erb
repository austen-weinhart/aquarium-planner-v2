<h1 class="showheader">Edit this aquarium!</h1>

<div class="big col-md-6">
  <%= form_for @aquarium do |f| %> 
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>  
    </div>
    <br>
    <div>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div> 
    <br>
    <p><strong>Select Your Fish</strong></p>
    <p>
      <%= f.collection_check_boxes :fish_ids, Fish.all, :id, :name  do |b| %>
        <%= b.label(class: "label_box") { b.check_box(class: "check_box")  + b.text  } %>
      <% end%>
    </p>
    <%= f.submit "Submit Changes" %>
    <br>
  <% end %>
  <br>
  <%= link_to "Back", aquarium_path %>
</div>